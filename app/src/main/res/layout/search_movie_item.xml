<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favorite_movie_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/favorite_movie_poster"
        android:layout_width="@dimen/search_movie_width_size"
        android:layout_height="@dimen/search_movie_height_size"
        android:scaleType="fitXY"
        android:src="@drawable/ic_download"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/favorite_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:minLines="2"
        android:textSize="@dimen/search_movie_item_size_name_movie"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/favorite_movie_poster"
        app:layout_constraintStart_toStartOf="@id/favorite_movie_poster"
        app:layout_constraintTop_toBottomOf="@id/favorite_movie_poster" />


</androidx.constraintlayout.widget.ConstraintLayout>